CREATE TABLE claimant(
	id INT GENERATED BY DEFAULT AS IDENTITY(INCREMENT 1 START 1 MINVALUE 1 MAXVALUE '14748647 CACHE 1),
	name CHARACTER VARYING(50) NOT NULL,
	surname CHARACTER VARYING(50) NOT NULL,
	CONSTRAINT pk_id PRIMARY KEY(id)
);

CREATE TABLE worker(
	id INT GENERATED BY DEFAULT AS IDENTITY(INCREMENT 1 START 1 MINVALUE 1 MAXVALUE '14748647 CACHE 1),
	name CHARACTER VARYING(50) NOT NULL,
	surname CHARACTER VARYING (50) NOT NULL,
	job_title CHARACTER VARYING (30) NOT NULL,
	CONSTRAINT pk_worker PRIMARY KEY (id)
	
);

CREATE TABLE report_row_entry(
	id INT GENERATED BY DEFAULT AS IDENTITY(INCREMENT 1 START 1 MINVALUE 1 MAXVALUE '14748647 CACHE 1),
	matter INT NOT NULL,
	start_date Date NOT NULL,
	finish_date Date NOT NULL,
	work_done BOOLEAN NOT NULL,
	scheduled_completion_date Date NOT NULL,
	weekly_time_spent INT NOT NULL,
	status CHARACTER VARYING(15) NOT NULL,
	comments CHARACTER VARYING (30),
	CONSTRAINT pk_reportrowentry PRIMARY KEY(id)
);

CREATE TABLE report(
	id INT GENERATED BY DEFAULT AS IDENTITY(INCREMENT 1 START 1 MINVALUE 1 MAXVALUE '14748647 CACHE 1),
	worker_id INT NOT NULL,
	claimant_id INT NOT NULL,
	report_row_entry_id INT NOT NULL,
	report_commit_date DATE NOT NULL,
	report_edit_date Date NOT NULL,
	CONSTRAINT pk_report PRIMARY KEY(id),
	CONSTRAINT pk_report_worker FOREIGN KEY (worker_id) REFERENCES worker(id),
	CONSTRAINT fk_report_claimant FOREIGN KEY(claimant_id) REFERENCES claimant(id),
	CONSTRAINT fk_report_report_row_entry FOREIGN KEY(report_row_entry_id) REFERENCES report_row_entry(id)
);

